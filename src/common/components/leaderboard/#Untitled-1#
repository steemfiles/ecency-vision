server {
    listen              443 ssl;
    server_name         ecency.steemfiles.com;

    ssl_certificate     /etc/letsencrypt/live/ecency.steemfiles.com/cert.pem;
    ssl_certificate_key /etc/letsencrypt/live/ecency.steemfiles.com/privkey.pem;

	location / {
			proxy_pass http://127.0.0.1:3000/;
			proxy_redirect off;
			proxy_pass_request_body on;
			proxy_pass_request_headers on;
			proxy_read_timeout 10s;
			proxy_next_upstream_tries 1;
	
			proxy_set_header Host ecency.steemfiles.com;
			proxy_set_header X-Real-IP  185.130.45.125;
			proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	}
}

